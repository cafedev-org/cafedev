extends ./includes/layout.pug

block title
    title= title + " // Cafe Dev"

block meta
    meta(name="keywords", content=keywords)
    meta(name="description", content=description)

block content
    article
        header
            a(href=href)
                h2= title
            h6 Written by #{author.firstname} #{author.lastname} / #{date}
        figure
            img(src=imgHeader)
        section!= content

    include ./includes/disqus.pug
    script.
        var titleEl = document.querySelector("article h2");
        titleEl.innerHTML = titleEl.innerHTML.replace(/\s/g, "<span class=dot></span>");
